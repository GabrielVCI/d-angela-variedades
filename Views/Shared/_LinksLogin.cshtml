@using Microsoft.AspNetCore.Identity
@using d_angela_variedades.Interfaces
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IUsuariosRepositorio usuarioRepositorio

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);

        var userTask = usuarioRepositorio.ObtenerNombreUsuario(userId);
        userTask.Wait();

        var user = userTask.Result; 
 
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @user</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="usuarios" asp-action="Registro">
                Registro
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="usuarios" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>