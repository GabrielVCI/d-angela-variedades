
@model EmpresasViewModel

@{
    ViewData["Title"] = "Registro";
}

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear una cuenta para tu empresa</h3></div>
                        <div class="card-body">

                            <form asp-action="Registro" enctype="multipart/form-data">

                                <div asp-validation-summary="ModelOnly"></div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input class="form-control" id="inputFirstName" asp-for="NombreAdministrador" type="text" placeholder="Ingresa tu nombre" />
                                            <label for="inputFirstName" >Nombre del propietario</label>
                                            <span asp-validation-for="NombreAdministrador" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="ApellidoAdministrador" id="inputLastName" type="text" placeholder="Ingresa tu apellido" />
                                            <label for="inputLastName">Apellidos del propietario</label>
                                            <span asp-validation-for="ApellidoAdministrador" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="EmailAdministrador" id="inputEmail" type="email" placeholder="name@example.com" />
                                    <label for="inputEmail">Correo electrónico</label>
                                    <span asp-validation-for="EmailAdministrador" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputEmail" asp-for="NombreEmpresa" type="text" placeholder="Google" />
                                    <label for="inputEmail">Nombre de la empresa</label>
                                    <span asp-validation-for="NombreEmpresa"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputEmail" asp-for="LogoEmpresa" type="file" />
                                    <label for="inputEmail">Logo (opcional)</label>
                                    <span asp-validation-for="LogoEmpresa" class="text-danger"></span>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input class="form-control" id="inputPassword" asp-for="Password" placeholder="Create a password" />
                                            <label for="inputPassword" asp-for="Password">Contraseña</label>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input class="form-control" asp-for="ConfirmPassword" id="inputPasswordConfirm" placeholder="Confirm password" />
                                            <label for="inputPasswordConfirm">Confirmar contraseña</label>
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 mb-0">
                                    <div class="d-grid"><button type="submit" class="btn btn-primary btn-block" >Crear Cuenta</button></div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center py-3">
                            <div class="small"><a asp-action="Login">¿Ya tienes una cuenta? Ingresa</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>