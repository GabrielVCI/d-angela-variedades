@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                            <div class="card-body">
                                <form asp-action="Login">

                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputEmail" asp-for="UserName" type="email" placeholder="name@example.com" />
                                        <label for="inputEmail">Correo</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputPassword" asp-for="Password" type="password" placeholder="Password" />
                                        <label for="inputPassword">Contraseña</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-check mb-3">
                                        <input class="form-check-input" id="inputRememberPassword" asp-for="RememberMe" type="checkbox" value="" />
                                        <label class="form-check-label" for="inputRememberPassword">Recuérdame</label>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <a class="small" style="cursor: pointer" asp-action="Password">Olvidé mi contraseña</a>
                                        <button type="submit" class="btn btn-primary">Ingresa</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small"><a asp-action="Registro">¿No tienes cuenta? Crea una!</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
 
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}