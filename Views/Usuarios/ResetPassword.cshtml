@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">
                                Recuperar contraseña
                            </h3></div>
                            <div class="card-body">
                                <p>Ingresa la nueva contraseña</p>

                                <form asp-action="ResetPassword">
                                    <input type="hidden" asp-for="Token" />
                                    <input type="hidden" asp-for="Email" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="input-codigo-recuperar-password mb-4">
                                        <label asp-for="NewPassword" class="">Nueva contraseña</label>
                                        <input asp-for="NewPassword" class="form-control" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>

                                    </div>

                                    <div class="input-codigo-recuperar-password">
                                        <label asp-for="ConfirmPassword" class="">Confirmar contreseña</label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    </div>

                                    <div class="mt-4">
                                        <button class="btn btn-primary">Guardar</button>
                                    </div>

                                </form>
                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small"><a asp-action="Login">Cancelar</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
