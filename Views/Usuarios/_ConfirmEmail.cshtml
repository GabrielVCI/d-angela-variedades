@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Confirma tu email</h3>
                            </div>

                            <div class="card-body">
                                <p>Tu correo aún no está autenticado.</p>

                                Te hemos enviado un correo para que confirmes tu dirección de email, por favor, revisa tu bandeja de mensajes en tu correo
                                electrónico.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

</div>